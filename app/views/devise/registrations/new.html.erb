
<div class="row">
  <p class="text-center" style="padding-bottom:20px;">
    <%= image_tag("logo.png", size: "200x120") %>
  </p>
</div>


  <div class="col-lg-4 col-md-4 col-md-offset-4 col-lg-offset-4" style="padding-bottom:20px;">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Sign Up to ARQ Alerts </h4>
                            </div>
                            <div class="content">
                              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                <%= devise_error_messages! %>
                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                              <label>First & Last Name</label>
                                              <%= f.text_field :name, autofocus: true, class: "form-control border-input" %>
                                              </div>
                                      </div>
                                  </div>
                                  <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                              <label>Company Name</label>
                                              <%= f.text_field :email, class: "form-control border-input" %>
                                              </div>
                                      </div>
                                  </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <%= f.email_field :email, class: "form-control border-input" %>
                                                </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                              <label>Password
                                                <% if @minimum_password_length %>
                                                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                                                  <% end %>
                                                  <br />
                                              </label>
                                              <%= f.password_field :password, autocomplete: "off", class: "form-control border-input" %>
                                          </div>
                                      </div>
                                    </div>
                                    <div class="row">
                                      <div class="col-md-12">
                                          <div class="form-group">
                                              <label>Password Confirmation</label>
                                              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control border-input" %>
                                          </div>
                                      </div>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-info btn-fill btn-wd">Sign In</button>
                                    </div>
                                    <div class="clearfix"></div>

                                <% end %>
                            </div>
                            <p class="text-muted">Already a user? <%= render "devise/shared/links" %></p>

                        </div>
                    </div>
